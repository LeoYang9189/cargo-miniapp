page {
  background: linear-gradient(150deg, 
    rgba(18, 150, 219, 0.35) 0%,
    rgba(18, 150, 219, 0.25) 30%,
    rgba(18, 150, 219, 0.28) 70%,
    rgba(18, 150, 219, 0.35) 100%
  );
}

/* 确保导航栏背景透明 */
.navigation-bar {
  background: transparent !important;
}

.scrollarea {
  height: 100vh;
}

.page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 35rpx;
  box-sizing: border-box;
}

/* 金刚区 */
.grid-section {
  width: 710rpx;
  margin: 16rpx 4rpx 8rpx;
  padding: 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}

.grid-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.grid-item image {
  width: 88rpx;
  height: 88rpx;
  margin-bottom: 12rpx;
}

.grid-item text {
  font-size: 24rpx;
  color: #333333;
  line-height: 1;
}

/* 瓷片区 */
.tiles-section {
  width: 710rpx;
  height: 460rpx;
  margin: 8rpx 4rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
  position: relative;
}

.tiles-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(
    circle at 70% 30%,
    rgba(18, 150, 219, 0.02) 0%,
    transparent 50%
  );
  border-radius: 16rpx;
  pointer-events: none;
}

.tiles-content {
  display: flex;
  justify-content: space-between;
  height: 100%;
  box-sizing: border-box;
}

.tiles-left, .tiles-right {
  width: 320rpx;
  display: flex;
  flex-direction: column;
}

.tile-large {
  width: 320rpx;
  height: 270rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.tile-small {
  width: 320rpx;
  height: 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.tiles-left .tile-large {
  margin-bottom: 22rpx;
}

.tiles-right .tile-small {
  margin-bottom: 22rpx;
}

.tile-large image, .tile-small image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 轮播消息 */
.news-section {
  width: 710rpx;
  margin: 16rpx 4rpx 8rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.news-swiper {
  height: 72rpx;
  line-height: 72rpx;
}

.news-item {
  font-size: 24rpx;
  color: #666666;
  display: flex;
  align-items: center;
}

.news-item image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.news-item text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 审批事项 */
.approval-section {
  width: 710rpx;
  margin: 8rpx 4rpx 24rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.tab-header {
  display: flex;
  justify-content: space-around;
  border-bottom: 2rpx solid #f5f5f5;
  margin-bottom: 16rpx;
}

.tab-item {
  position: relative;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666666;
  flex: 1;
  text-align: center;
  transition: all 0.3s;
}

.tab-item.active {
  color: #1296db;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 96rpx;
  height: 36rpx;
  border-radius: 0;
}

/* 添加图片样式 */
.check-image {
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 96rpx;
  height: 36rpx;
}

.approval-list {
  min-height: 200rpx;
}

.approval-item {
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.approval-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.approval-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.approval-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.status {
  margin-right: 16rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  background: rgba(0, 0, 0, 0.05);
}

.status.pending {
  color: #ff9900;
  background: rgba(255, 153, 0, 0.1);
}

.status.approved {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
}

.status.rejected {
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
}

.time {
  color: #999999;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
}
