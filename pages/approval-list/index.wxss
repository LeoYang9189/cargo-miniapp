page {
  background: #f7f7f7;
}

.page-container {
  padding: 0 24rpx;
  padding-top: calc(44rpx + env(safe-area-inset-top));
}

/* 搜索框样式 */
.search-box {
  position: relative;
  margin-bottom: 24rpx;
}

.search-box input {
  width: 100%;
  height: 88rpx;
  background: #FFFFFF;
  border-radius: 44rpx;
  padding: 0 88rpx 0 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
}

.placeholder {
  color: #999999;
}

/* Tab切换样式 */
.tab-header {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
  padding: 0 60rpx;
}

.tab-item {
  position: relative;
  padding: 16rpx 48rpx;
  font-size: 32rpx;
  color: #666666;
  flex: 1;
  text-align: center;
  transition: all 0.3s;
}

.tab-item text {
  font-size: 32rpx;
  color: #666666;
  transition: all 0.3s;
}

.tab-item.active text {
  color: #1296db;
  font-weight: 500;
}

.check-image {
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 96rpx;
  height: 36rpx;
  display: block;
}

/* 审批列表样式 */
.scrollarea {
  height: calc(100vh - 300rpx);
}

.approval-list {
  padding-bottom: env(safe-area-inset-bottom);
}

.approval-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.approval-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.approval-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
}

.approval-status.pending {
  color: #ff9900;
  background: rgba(255, 153, 0, 0.1);
}

.approval-status.approved {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
}

.approval-status.rejected {
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
}

.card-content {
  font-size: 28rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  color: #999999;
  width: 140rpx;
}

.info-row .value {
  color: #333333;
  flex: 1;
} 