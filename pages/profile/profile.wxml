<!--pages/profile/profile.wxml-->
<navigation-bar title="我的" back="{{false}}" color="black"></navigation-bar>

<view class="profile-container">
  <!-- 用户信息区域 -->
  <view class="user-info">
    <view class="user-basic">
      <image class="avatar" src="/images/avatar1.png" mode="aspectFill"></image>
      <text class="username">Leo Yang</text>
    </view>
  </view>

  <!-- 用户中心功能区 -->
  <view class="function-area">
    <view class="function-item">
      <image src="/images/track.png" mode="aspectFit"></image>
      <text>订单跟踪</text>
    </view>
    <view class="function-item">
      <image src="/images/quote.png" mode="aspectFit"></image>
      <text>我的报价</text>
    </view>
    <view class="function-item">
      <image src="/images/subscribe.png" mode="aspectFit"></image>
      <text>运价订阅</text>
    </view>
  </view>

  <!-- 专属客服卡片 -->
  <view class="service-card">
    <view class="service-info">
      <image class="service-avatar" src="/images/service-vip.png" mode="aspectFit"></image>
      <view class="service-detail">
        <text class="service-name">我的专属客服</text>
        <text class="service-desc">一对一为您服务</text>
      </view>
    </view>
    <view class="contact-area">
      <image class="qrcode-icon" src="/images/qrcode.png" mode="aspectFit"></image>
      <image class="arrow-right" src="/images/arrow-right-white.png" mode="aspectFit"></image>
    </view>
  </view>

  <!-- 企业认证入口 -->
  <view class="verify-entry">
    <view class="verify-info">
      <image class="verify-icon" src="/images/verify.png" mode="aspectFit"></image>
      <text class="company-name">上海沃特国际货运代理有限公司</text>
      <image class="verify-success" src="/images/verify-success.png" mode="aspectFit"></image>
    </view>
    <image class="arrow-icon" src="/images/arrow-right.png" mode="aspectFit"></image>
  </view>
</view>