page {
  background: #f7f7f7;
}

.scrollarea {
  height: 100vh;
}

.page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  padding-top: calc(44rpx + env(safe-area-inset-top));
}

/* 搜索框样式 */
.search-box {
  position: fixed;
  top: calc(170rpx + env(safe-area-inset-top));
  left: 20rpx;
  right: 20rpx;
  z-index: 100;
  background: #f7f7f7;
  padding: 8rpx 0;
}

.search-box input {
  width: 100%;
  height: 88rpx;
  background: #FFFFFF;
  border-radius: 36rpx;
  padding: 0 88rpx 0 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
}

.placeholder {
  color: #999999;
}

/* 客户列表样式 */
.customer-list {
  width: 710rpx;
  margin-top: 70rpx;
}

.customer-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.card-header {
  margin-bottom: 16rpx;
}

.company-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.card-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 16rpx 0;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-item .label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.info-item .value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

/* 客户状态样式 */
.value.potential {
  color: #ff9900;
}

.value.active {
  color: #52c41a;
}

.value.inactive {
  color: #999999;
}

.value.lost {
  color: #ff4d4f;
}

.card-footer {
  display: flex;
  align-items: center;
}

.contact-info {
  display: flex;
  align-items: center;
}

.contact-info image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.contact-info text {
  font-size: 28rpx;
  color: #666666;
}

/* 创建客户按钮 */
.create-btn {
  position: fixed;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  left: 24rpx;
  right: 24rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #1296db;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.3);
} 