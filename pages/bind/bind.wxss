.bind-container {
  min-height: 100vh;
  padding: 0 48rpx;
  background: #ffffff;
}

.header {
  padding: 80rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wechat-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.nickname {
  margin-top: 24rpx;
  font-size: 32rpx;
  color: #333333;
}

.form-area {
  padding-top: 48rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 48rpx;
}

.input-item {
  display: flex;
  align-items: center;
  height: 96rpx;
  padding: 0 24rpx;
  background: #F8F8F8;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.input-item .icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.input-item input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.bind-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #1296db;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 12rpx;
  margin-top: 48rpx;
  font-weight: normal;
}

.tips {
  margin-top: 32rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
}

.link {
  color: #1296db;
  margin-left: 8rpx;
} 