page {
  background: #f7f7f7;
}

.page-container {
  padding: calc(88rpx + env(safe-area-inset-top)) 24rpx 24rpx;
}

.form-group {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333333;
}

.picker {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

input {
  flex: 1;
  height: 44rpx;
  font-size: 28rpx;
  color: #333333;
}

.checkbox-group {
  display: flex;
  gap: 32rpx;
}

.checkbox {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.checkbox.checked {
  background: rgba(18, 150, 219, 0.1);
}

.checkbox-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.container-list {
  margin-top: 16rpx;
}

.container-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.container-type {
  flex: 6;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
}

.container-quantity {
  flex: 1;
  height: 88rpx;
  padding: 0 24rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
}

.delete-btn {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-btn image {
  width: 36rpx;
  height: 36rpx;
}

.add-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

.add-container image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.add-container text {
  font-size: 28rpx;
  color: #666666;
}

.submit-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #1296db;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 12rpx;
  margin-top: 48rpx;
  font-weight: normal;
} 