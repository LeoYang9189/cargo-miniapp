page {
  background: #f7f7f7;
}

.scrollarea {
  height: 100vh;
}

.page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  padding-top: calc(44rpx + env(safe-area-inset-top));
}

/* 搜索框样式 */
.search-box {
  position: fixed;
  top: calc(170rpx + env(safe-area-inset-top));
  left: 20rpx;
  right: 20rpx;
  z-index: 100;
  background: #f7f7f7;
  padding: 8rpx 0;
}

.search-box input {
  width: 100%;
  height: 88rpx;
  background: #FFFFFF;
  border-radius: 36rpx;
  padding: 0 88rpx 0 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
}

.placeholder {
  color: #999999;
}

/* Tab切换样式 */
.tab-header {
  position: fixed;
  top: calc(280rpx + env(safe-area-inset-top));
  left: 20rpx;
  right: 20rpx;
  z-index: 100;
  background: #f7f7f7;
  display: flex;
  justify-content: space-around;
  padding: 0 60rpx;
}

.tab-item {
  position: relative;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666666;
  flex: 1;
  text-align: center;
  transition: all 0.3s;
}

.tab-item text {
  font-size: 28rpx;
  color: #666666;
}

.tab-item.active text {
  color: #1296db;
  font-weight: 500;
}

.check-image {
  position: absolute;
  bottom: -6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 96rpx;
  height: 36rpx;
  display: block;
}

/* 报价列表样式 */
.quote-list {
  width: 710rpx;
  margin-top: 200rpx;
  padding-bottom: 120rpx;
}

.quote-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

/* 信封样式装饰 */
.quote-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #1296db, #0cc);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.quote-id {
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
}

.status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status.pending {
  color: #ff9900;
  background: rgba(255, 153, 0, 0.1);
}

.status.quoted {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
}

.card-info {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  width: 140rpx;
  font-size: 26rpx;
  color: #999999;
}

.info-row .value {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
}

.price-info {
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 16rpx;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.price-row:last-child {
  margin-bottom: 0;
}

.container-type {
  font-size: 26rpx;
  color: #666666;
}

.price {
  font-size: 28rpx;
  color: #1296db;
  font-weight: 500;
}

/* 创建报价按钮 */
.create-btn {
  position: fixed;
  bottom: calc(24rpx + env(safe-area-inset-bottom));
  left: 24rpx;
  right: 24rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #1296db;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 12rpx rgba(18, 150, 219, 0.3);
} 