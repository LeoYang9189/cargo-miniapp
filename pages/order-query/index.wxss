page {
  background: #f7f7f7;
}

.scrollarea {
  height: 100vh;
}

.page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 8rpx;
}

/* 搜索框样式 */
.search-box {
  position: relative;
  margin: 8rpx 0 8rpx;
  width: 710rpx;
}

.search-box input {
  width: 100%;
  height: 88rpx;
  background: #FFFFFF;
  border-radius: 44rpx;
  padding: 0 88rpx 0 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-icon {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
}

.placeholder {
  color: #999999;
}

/* 控制塔区域 */
.control-tower {
  width: 710rpx;
  margin: 0 auto;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 8rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.grid-container {
  display: flex;
  flex-direction: column;
}

.grid-item {
  position: relative;
  height: 100rpx;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  box-sizing: border-box;
  overflow: hidden;
  width: 100%;
  margin-bottom: 20rpx;
  -webkit-backdrop-filter: blur(10px);
  backdrop-filter: blur(10px);
}

.grid-item:last-child {
  margin-bottom: 0;
}

.grid-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 70% 30%, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  pointer-events: none;
  z-index: 1;
}

.grid-item::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: inherit;
  -webkit-backdrop-filter: blur(10px);
  backdrop-filter: blur(10px);
  z-index: 0;
}

.item-content {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
}

.item-title {
  font-size: 28rpx;
  color: #FFFFFF;
  margin-bottom: 0;
  flex: 1;
}

.item-number {
  font-size: 48rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 0;
  margin-right: 24rpx;
}

.item-link {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.item-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  opacity: 0.2;
}

/* 网格项颜色 */
.grid-item.blue {
  background: linear-gradient(135deg, rgba(75, 150, 255, 0.75) 0%, rgba(46, 109, 255, 0.75) 100%);
  box-shadow: 0 4rpx 20rpx rgba(75, 150, 255, 0.3);
}

.grid-item.red {
  background: linear-gradient(135deg, rgba(255, 118, 118, 0.75) 0%, rgba(255, 69, 69, 0.75) 100%);
  box-shadow: 0 4rpx 20rpx rgba(255, 118, 118, 0.3);
}

.grid-item.pink {
  background: linear-gradient(135deg, rgba(255, 133, 192, 0.75) 0%, rgba(255, 91, 163, 0.75) 100%);
  box-shadow: 0 4rpx 20rpx rgba(255, 133, 192, 0.3);
}

.grid-item.orange {
  background: linear-gradient(135deg, rgba(255, 163, 101, 0.75) 0%, rgba(255, 122, 61, 0.75) 100%);
  box-shadow: 0 4rpx 20rpx rgba(255, 163, 101, 0.3);
}

.grid-item.cyan {
  background: linear-gradient(135deg, rgba(92, 225, 230, 0.75) 0%, rgba(53, 199, 205, 0.75) 100%);
  box-shadow: 0 4rpx 20rpx rgba(92, 225, 230, 0.3);
}

.grid-item.purple {
  background: linear-gradient(135deg, rgba(183, 138, 255, 0.75) 0%, rgba(156, 101, 255, 0.75) 100%);
  box-shadow: 0 4rpx 20rpx rgba(183, 138, 255, 0.3);
}

/* 底部标签栏 */
.bottom-tabs {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: calc(98rpx + env(safe-area-inset-bottom));
  background: #FFFFFF;
  display: flex;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.tab-item image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 4rpx;
}

.tab-item text {
  font-size: 24rpx;
  color: #666666;
}

.share-btn {
  flex: 1.2;
  height: 64rpx;
  background: #4B96FF;
  border-radius: 32rpx;
  margin: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
}

.share-btn text {
  font-size: 24rpx;
}

.share-btn .highlight {
  color: #FFE600;
  margin-left: 4rpx;
} 